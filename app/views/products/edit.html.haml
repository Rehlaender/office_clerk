.product_edit_start
= render "head"
- url = @product.persisted? ? product_path(@product) : products_path
= bootstrap_form_for(@product, :html => { :multipart => true , :role=>"form"} ) do |f|
  = f.hidden_field( :product_id) if @product.product_id
  .row
    .col-md-8
      .row
        .col-md-6
          = f.text_field :name , :label => "Nombre"
        .col-md-6
          - unless @product.product_id
            = f.text_field :link
      .row
        .col-md-12
          = f.text_area :description, :label => "Descripcion", :rows => 10
      .row
        .col-md-6
          = image_tag @product.main_picture.url(:list)
          = f.file_field :main_picture , :label => "Foto principal"
        .col-md-6
          = image_tag @product.extra_picture.url(:list)
          = f.file_field :extra_picture , :label => "Foto extra"
    .col-md-4
      .row
        .col-md-12
          = f.text_area :summary, :label => "Resumen", :rows => 4
        .col-md-6
          = f.text_field :price, :label => "Precio"
          = f.text_field :cost, :label => "Costo"
          = f.text_field :scode, :label => "Id segun proveedor"
        .col-md-6
          = f.text_field :weight, :label => "Peso"
          = f.text_field :ean, :label => "Clave unica"
          = f.text_field :tax, :label => "Taza de interes"
      .row
        .col-md-6
          = f.select :supplier_id,  Supplier.all.order(:supplier_name).map { |c| [c.supplier_name, c.id ] }, :prompt => "Selecciona", :label => "Proveedor"
        .col-md-6
          = f.select :category_id , Category.all.order(:name).map { |c| [c.name, c.id ] }, :prompt => "Selecciona", :label => "Categoria"
        .col-md-4
          = f.check_box :online, :label => "En linea?"
        .col-md-8
          = f.submit :class => "btn btn-success"
          -if @product.product_id
            = link_to "Cancelar", product_path(@product.product), :class => "btn btn-warning"
          -else
            = link_to "Cancelar", products_path, :class => "btn btn-warning"
.product_edit_end
