.product_show_start
= render "head"

-if @product.line?
  =render "line"

.row
  %br
  .col-md-4
    .row.tausta
      .col-md-6
        %p
          %b= "Imagen principal" + " : "
          %br
          = image_tag @product.main_picture.url
      .col-md-6
        %p
          %b= "Imagen extra" + " : "
          %br
          = image_tag @product.extra_picture.url
    .row
      .col-md-6
        %p
          %b= "Precio" + " : "
          = in_place @product , :price , :display_with => :best_euros
        %p
          %b= "Costo" + " : "
          = in_place @product , :cost , :display_with => :best_euros
        %p
          %b= "Categoria" + " : "
          = link_to @product.category.name , category_path(@product.category) if @product.category
        %p
          %b= "Link" + " : "
          = @product.link
        %p
          %b= "Clave unica" + " : "
          = in_place @product , :ean
      .col-md-6
        %p
          %b= "Peso" + " : "
          = in_place @product , :weight
        %p
          %b= "En inventario" + " : "
          = @product.inventory
        %p.hide
          %b= t(:stock_level) + " : "
          = in_place @product , :stock_level
        %p
          %b= "Proveedor" + " : "
          = link_to @product.supplier.supplier_name ,supplier_path(@product.supplier) if @product.supplier
        %p.hide
          %b= t(:scode) + " : "
          = in_place @product , :scode
        %p.hide
          %b= t(:tax_percent) + " : "
          = in_place @product , :tax
  .col-md-4
    %p
      %b= "Resumen" + " : "
      = in_place @product , :summary
    %p
      %b= "Descripcion" + " : "
      = in_place @product , :description , :as => :textarea
  .col-md-4
    =render :partial => "products/preview_box" , :locals => {:product => @product}
    = markdown @product.description
%br
.row.product_show_row_buttons
  .col-md-2
    = link_to "Editar", edit_product_path(@product), :class => "btn btn-success"
  .col-md-2
    = link_to "Eliminar" , product_path(@product), :method => :delete , :class => "btn btn-danger", :data => {  :confirm => "Estass seguro?"}
  -unless @product.product_item?
    .col-md-2
      = link_to "Nuevo Producto" , new_product_path( :parent_id => @product.id), :class => "btn btn-primary"
  .col-md-6.product_show_row_end
.product_show_end
