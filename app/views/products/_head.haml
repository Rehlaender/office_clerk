.row
  .col-md-2
    = t params["action"]    
    %h3= "Producto"
  .col-md-6
    %h3
      - if @product.product_item?
        = link_to @product.product.name , product_url(@product.product)
      = @product.name
    %small
      = @product.online ? "El producto ya esta en linea" : "El producto no se encuentra en linea"
  .col-md-4.hide
    %h2= t(:preview)
